{
  "manifest_version": 3,
  "name": "AdBlock Pro",
  "version": "5.0.0",
  "description": "Bloqueador de anuncios efectivo con 266 reglas de bloqueo para anuncios, rastreadores y malware",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "scripting",
    "webNavigation",
    "notifications",
    "alarms",
    "cookies",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "AdBlock Pro - Protecci√≥n Total",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_main",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}

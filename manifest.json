{
  "manifest_version": 3,
  "name": "AdBlock Pro",
  "version": "6.0.0",
  "description": "Bloqueador de anuncios avanzado con listas de filtros estilo Brave Shield: EasyList, uBlock Origin, YouTube, Twitch y más",
  "permissions": [
    "storage",
    "tabs",
    "activeTab",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "scripting",
    "webNavigation",
    "notifications",
    "alarms",
    "cookies",
    "webRequest"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": ["filterLists.json"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "AdBlock Pro - Protección Total",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_main",
        "enabled": false,
        "path": "rules.json"
      }
    ]
  }
}
